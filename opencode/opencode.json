{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "CONTRIBUTING.md",
    "docs/guidelines.md",
    ".claude/*.md"
  ],
  "agent": {
    "deep-thinker": {
      "description": "Agent that uses high reasoning effort for complex problems",
      "model": "openai/gpt-5",
      "reasoningEffort": "high",
    },
    "balanced-thinker": {
      "description": "Agent that uses medium reasoning effort for complex problems",
      "model": "openai/gpt-5",
      "reasoningEffort": "medium",
    }
  },
  "provider": {
    "openai": {
      "models": {
        "gpt-5": {
          "options": {
            "reasoningEffort": "medium",
          }
        }
      }
    }
  }
}
