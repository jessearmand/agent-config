{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "CONTRIBUTING.md",
    "docs/guidelines.md",
    "CLAUDE.md",
    ".claude/*.md"
  ],
  "agent": {
    "deep-thinker": {
      "description": "Agent that uses high reasoning effort for complex problems",
      "model": "openai/gpt-5.2-xhigh",
      "options": {
        "reasoningEffort": "xhigh",
        "reasoningSummary": "detailed",
        "textVerbosity": "medium",
        "include": [
          "reasoning.encrypted_content"
        ],
        "store": false
      }
    },
    "balanced-thinker": {
      "description": "Agent that uses balanced reasoning effort for complex problems",
      "model": "deepseek/deepseek-reasoner"
    }
  },
  "plugin": [
    "opencode-openai-codex-auth@4.1.0",
    "opencode-gemini-auth"
  ],
  "provider": {
    "google": {
      "models": {
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro High",
          "options": {
            "thinkingConfig": {
              "thinkingLevel": "high",
              "includeThoughts": true
            }
          }
        }
      }
    },
    "openai": {
      "options": {
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "textVerbosity": "medium",
        "include": [
          "reasoning.encrypted_content"
        ],
        "store": false
      },
      "models": {
        "gpt-5.2": {
          "name": "GPT 5.2 (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
